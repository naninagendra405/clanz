<div class="widget woocommerce widget_product_categories filter-brand filter-inside">
    <h3 data-init="widgetToggle">{{section.settings.shop_by_brand_title}}</h3>
    <ul class="product-categories filter-content e-filter brand-filter">
        {% for product_vendor in collection.all_vendors %}
        <li class="cat-item">
          {{ product_vendor | link_to_vendor }}
        </li>
          {% endfor %}
    </ul>
  	
</div>


<!-- collection-template.liquid -->
{% comment %}
For more information on collection tags:
- http://docs.shopify.com/themes/liquid-variables/collection
{% endcomment %}
{% if template contains 'collection.list' %}
	{%- assign per_page = settings.nb_per_page -%}
{% elsif template contains 'collection.fullwidth' %}
	{%- assign per_page = 12 -%}
{% elsif template contains 'collection.12' %}
	{%- assign per_page = 12 -%}
{% elsif template contains 'collection.16' %}
	{%- assign per_page = 16 -%}
{% elsif template contains 'collection.24' %}
	{%- assign per_page = 24 -%}
{% else %}
	{%- assign per_page = settings.nb_per_page -%}
{% endif %}

{% paginate collection.products by per_page %}

{% comment %}
Use .grid--rev so that the collection tags appear below the products on mobile
{% endcomment %}
{% if section.settings.layout == 'Left_sidebar' %}
	{% include 'nixx-collection-template-left-sidebar' %}
{% elsif section.settings.layout == 'Right_sidebar' %}
	{% include 'nixx-collection-template-right-sidebar' %}
{% elsif section.settings.layout == 'full_width' %}
	{% include 'nixx-collection-template-full' %}

{% endif %}
{% endpaginate %}


<div data-section-id="{{ section.id }}" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
{% if settings.newsletter_form_action != blank %}
{% assign form_action = settings.newsletter_form_action %}
{% else %}
{% assign form_action = '#' %}
{% endif %}
<div class="{% if section.settings.box == 'box' %}container{% endif %} newsletter-home3 space_bot_150 space_top_130 BG margin_bottom_30">
  <h1 class="title-font capital title-newsletter text-center">{{section.settings.title}}</h1>
  <p class="des-font des-newsletter space_bot_60 text-center">{{ section.settings.des | truncatewords: 20 }}</p>
  <form action="{{ form_action }}" class="form-group des-font flex" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank">
    <input type="email" name="EMAIL" class="form-control" placeholder="Your email address..." value="{% if customer %}{{ customer.email }}{% endif %}">
    <button type="submit" class="menu-font uppercase">{{section.settings.btn}}</button>
  </form>
</div>
</div>
<style>
  .newsletter-home3.BG{
    border-top: {{section.settings.size_border}}px solid {{section.settings.color_border}};
    background: {{section.settings.BG_color}};
  }
  .newsletter-home3.BG form input{
  	background: {{section.settings.BG_color}};
  }
</style>
{% schema %}
  {
    "name": "Newsletter home 3",
    "settings": [
			{
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
			{
			   "type":      "select",
			   "id":        "box",
			   "label":     "Select width section",
			   "options": [
			     {
			       
			       "value": "box",
			       "label": "Box"
			     },
			     {
			       
			       "value": "full",
			       "label": "Full width"
			     }
			   ],
			   "default":   "box"
			},
			{
          		"type": "text",
          		"id": "size_border",
          		"label": "Height border top",
          		"default": "1"
        	},
			{
          		"type": "color",
          		"id": "BG_color",
          		"label": "Color Background",
          		"default": "#fff"
        	},
			{
          		"type": "color",
          		"id": "color_border",
          		"label": "Color border",
          		"default": "#ddd"
        	},
			{
          		"type": "text",
          		"id": "title",
          		"label": "Title",
          		"default": "Get Our Latest Update In Your Email"
        	},
			{
          		"type": "textarea",
          		"id": "des",
          		"label": "Description",
          		"default": "Subscribe now to get 15% off on any product"
        	},
			{
          		"type": "text",
          		"id": "btn",
          		"label": "Button",
          		"default": "subscribe"
        	}
	],
	"presets": [
      {
        "name": "Newsletter home 3",
        "category": "Home 3"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}


<div data-section-id="{{ section.id }}" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="categories_v1 margin_bottom_30">
    <div class="container v2">
      <h3 class="title_section title-font margin_bottom_20">{{section.settings.title}}</h3>
    </div>
    <div class="container">
      <div class="row">
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        <div class="col-lg-2 col-md-3 col-sm-6 col-xs-6 content">
          <h5 class="title-font title_cate margin_bottom_20">
            <a href="{{block.settings.url}}">{{block.settings.title_categories}}</a>
          </h5>
          <a href="{{block.settings.url}}" class="inline-block over-hidden">
            {% if block.settings.img == blank %}
            <img src="{{'390x390.jpg' | asset_url}}" class="img-responsive hover-zoom-out">
            {% else %}
          	<img src="{{block.settings.img | img_url:'master'}}" class="img-responsive hover-zoom-out">
            {% endif %}
          </a>
        </div>
        {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>  

{% schema %}
{
  "name": "Categories v1",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title section",
      "default": "Categories"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
	  "limit":5,
      "settings": [
	{
      "type": "text",
      "id": "title_categories",
      "label": "Title categories",
      "default": "JACKET"
    },
	{
      "type": "url",
      "id": "url",
      "label": "Url categories",
      "default": "/collections/all"
    },
	{
      "type": "image_picker",
      "id": "img",
      "label": "Image categories",
      "info": "330x430.jpg"
    }
]
}
],
  "presets": [
    {
      "name": "Categories v1",
      "category": "section Coro"
    }
  ]
}
{% endschema %}
